{
  "name": "250/steam-curator",
  "description": "Automatically curates games based on gamer reviews.",
  "authors": [
    {
      "name": "Bilge",
      "email": "bilge@scriptfusion.com"
    }
  ],
  "minimum-stability": "beta",
  "prefer-stable": true,
  "require": {
    "php": "^8.1",
    "ext-intl": "*",
    "ext-json": "*",
    "250/log": "dev-master",
    "250/storage": "dev-master",
    "async/throttle": "^4",
    "athari/yalinqo": "^2.4",
    "doctrine/dbal": "^2",
    "joomla/di": "^2",
    "monolog/monolog": "^1",
    "provider/steam": "^7",
    "symfony/console": "^3",
    "transformers/mapping-transformer": "^3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.28",
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "ScriptFUSION\\Steam250\\Curator\\": "src"
    }
  },
  "config": {
    "sort-packages": true
  }
}
