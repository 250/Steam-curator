    "provider/steam": "dev-async",
    "scriptfusion/porter": "@dev",
    "symfony/console": "^3",
    "transformers/mapping-transformer": "5.0.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^6"
  },
  "autoload": {
    "psr-4": {
