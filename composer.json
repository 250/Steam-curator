    }
  ],
  "require": {
    "php": "^7.1",
    "ext-intl": "*",
    "ext-json": "*",
    "250/shared": "dev-master",
    "amphp/amp": "^2",
    "async/throttle": "^2.0",
    "connectors/http": "@dev",
    "connectors/ssl": "@dev",
    "doctrine/dbal": "^2",
    "joomla/di": "^1.5",
